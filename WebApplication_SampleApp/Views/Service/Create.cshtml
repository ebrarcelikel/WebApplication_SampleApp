@model ServiceViewModel


@{
	ViewData["Title"] = "Create Service";
}

<div class="row">
	<div class="col  ml-5">
		<h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
	</div>
</div>
<div class="row p-4 ">
	<div class="col-4">
		<form method="post">
			<div class="form-group">
				<label asp-for="Name"> <b>Name</b></label>
				<input type="text" class="form-control" asp-for="Name" placeholder="@NameData.GetCompanyName()">
			</div>
			<div class="form-group">
				<label asp-for="Explanation"><b>Explanation</b></label>
				<input type="text" class="form-control" asp-for="Explanation" placeholder="@TextData.GetSentence()" />
			</div>
			<div class="form-group">
				<label asp-for="CategoryID"><b>Category</b></label>
				<select asp-for="CategoryID" class="form-control"
						asp-items="@((List<SelectListItem>)ViewData["categories"])">
					<option selected>Choose category</option>
					
				</select>
			</div>
			<div class="form-group">
				<label asp-for="Price"><b>Price</b></label>
				<input type="text" class="form-control" asp-for="Price" placeholder="@TextData.GetNumeric(4)" />
			</div>

			<div class="mt-3">
				<button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Submit</button>
				<a class="btn btn-secondary " asp-action="Index"><i class="fa fa-arrow-left mr-2S"></i> Turn to List!</a>
			</div>
		</form>
	</div>
</div>



