@using WebApplication_SampleApp.Models.Entities

@model IEnumerable<Service>


@{
	ViewData["Title"] = "Services";

}


<div class="row p-4 mb-4">
	<div class="col-4">
		<h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
	</div>
</div>
<div class="row mb-4">
	<div class="col">
		<a class="btn btn-primary btn-sm" asp-action="Create"><i class="fa fa-plus mr-2"></i>Add Service</a>
	</div>
</div>


<div class="row mb-4">
	@foreach (Service service in Model)
	{
		<div class="col-4 ">


			<div class="card" style="width: 27rem;">
				<img src="https://picsum.photos/800/400?random=5" class="card-img-top" alt="...">
				<div class="card-body">


					<h5 class="card-title">@service.Name</h5>
					<div class="row">
						<div class="col">
							<h6 class="card-title">	<i>Category: </i>@service.Category.Name</h6>
						</div>
						<div class="col">
							<h6 class="card-title">	<i>Price: </i>@service.Price TL</h6>
						</div>
					</div>
					<p class="card-text">@service.Explanation</p>
					<div>
						<small>Number of Orders:  @service.Orders.Count</small>
						<small class="row">Creator: @service.CreatedUser (Created at @service.CreatedAt)</small>
						<small class="row">Updater: @service.ModifiedUser (Updated at @service.ModifiedAt)</small>
					</div>
					<div class="mt-3">
						<a asp-action="MyOrderList" class="btn btn-primary"> <i class="fa fa-plus"></i>Add to Your Orders</a>
						<a class="btn btn-warning" asp-action="Edit" asp-route-id=@service.ID><i class="fa fa-edit"></i> </a>
						<a class="btn btn-success" asp-action="Details" asp-route-id=@service.ID><i class="fa fa-info"></i> </a>
						<a class="btn btn-danger" asp-action="Delete"asp-route-id=@service.ID><i class="fa fa-trash"></i></a>
					</div>
				</div>
			</div>




		</div>
	}
</div>

