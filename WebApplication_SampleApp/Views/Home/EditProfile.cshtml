
<div class="row p-4">
	<div class="col">
		<h3 class="display-4 border-bottom">Edit User Account</h3>
	</div>
</div>
<div class="row p-4">
	<div class="col-3 text-center">
		<img src="https://picsum.photos/id/1005/128" class="rounded-circle img-thumbnail" />
		<div class="mt-4">
			<form method="post" enctype="multipart/form-data">
				<div>
					<input type="file" class="form-control" />
					<small>Please upload only .png or .jpg file</small>
				</div>
				<div>
					<button class="btn btn-primary btn-sm mt-2" type="submit"><i class="fa fa-upload mr-2"></i> Upload</button>
				</div>

			</form>
		</div>
	</div>
	<div class="col-4 offset-1">
		<form>
			<div class="form-group">
				<label for="Fullname"> <b>Fullname</b></label>
				<input type="text" class="form-control" id="Fullname" placeholder="Name Surname">
			</div>
			<div class="form-group">
				<label for="Username"><b>Username</b></label>
				<input type="text" class="form-control" id="Username" placeholder="Username">
			</div>
			<div class="form-group">
				<label for="email"><b>Email address</b></label>
				<input type="email" class="form-control" id="email" placeholder="name@example.com">
			</div>
			<div class="form-group">
				<label for="Password"><b>Password</b></label>
				<input type="password" class="form-control" id="Password" placeholder="Password">
			</div>
			
			<div class="text-center"class>
				<button type="submit" class="btn btn-primary mt-2"><i class="fa fa-save mr-2"></i> Save</button>

			</div>
		</form>
	</div>

</div>