@using WebApplication_SampleApp.Models.Entities

@model IEnumerable<User>
@{
	ViewData["Title"] = "Users";

}


<div class="row p-4 mb-4">
	<div class="col-4">
		<h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
	</div>
</div>
<div class="row mb-4">
	<div class="col">
		<a class="btn btn-primary btn-sm" asp-action="Create"><i class="fa fa-plus mr-2"></i>Add User</a>
	</div>

</div>

<div class="row mb-4">
	<div class="col table-responsive">
		<table class="table table-hover  table-sm small">
			<thead>
				<tr>
					<th>Full Name</th>
					<th>Username</th>
					<th>Email Adress</th>
					<th>Active</th>
					<th>Admin</th>
					<th>Creater</th>
					<th>Created Date</th>
					<th>Updater</th>
					<th>@Html.DisplayNameFor(m=>m.ModifiedAt)</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach  (User user in Model)
				{
					<tr class=" @(user.IsActive ? " " : "bg-light")">
						<td>@user.Fullname</td>
						<td>@user.Username</td>
						<td>@user.Email</td>
						<td class="text-center"><i class="fa fa-@(@user.IsActive ? "check text-succes":"times text-danger") "></i></td>
						<td class="text-center"><i class="fa fa-@(@user.IsAdmin ? "check text-succes":"times text-danger") "></i></td>
						
						<td>@user.CreatedUser</td>
						<td>@user.CreatedAt</td>
						<td>@user.ModifiedUser</td>
						<td>@user.ModifiedAt</td>
						<td class="text-center">
							<a class="btn btn-warning" asp-action="Edit" asp-route-id="@user.ID"><i class="fa fa-edit"></i></a>
							<a class="btn btn-info" asp-action="Details" asp-route-id="@user.ID"><i class="fa fa-search"></i></a>
							<a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.ID"><i class="fa fa-trash"></i></a>

						</td>
					</tr>
				}

			</tbody>
		</table>
	</div>
</div>