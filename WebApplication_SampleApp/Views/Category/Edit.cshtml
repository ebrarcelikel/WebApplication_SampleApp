@model CategoryViewModel

@{
	ViewData["Title"] = "Edit Category";
}

<div class="row p-4 mb-4">
	<div class="col">
		<h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
	</div>
</div>
<div class="row p-4 mb-4">
	<div class="col-4">
		<div asp-validation-summary="All" class="text-danger small"></div>

		<form method="post">
			<div class="form-group">
				<label asp-for="Name"> <b>Name</b></label>
				<input asp-for="Name" class="form-control" placeholder="@NameData.GetCompanyName()">
			</div>
			<div class="form-group">
				<label asp-for="Explanation"><b>Explanation</b></label>
				<textarea asp-for="Explanation" rows="2" type="text" class="form-control" placeholder="@TextData.GetSentence()"> </textarea></textarea>
			</div>

			<div>
				<button type="submit" class="btn btn-primary mt-2"><i class="fa fa-save mr-2"></i>Save</button>
				<a class="btn btn-secondary mt-2 " asp-action="Index"><i class="fa fa-arrow-left mr-2S"></i>Turn to List!</a>
			</div>
		</form>
	</div>
</div>